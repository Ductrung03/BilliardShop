@* Footer Styles *@
<link rel="stylesheet" href="~/section-footer.css" asp-append-version="true" />
<link rel="stylesheet" href="~/section-newsletter.css" asp-append-version="true" />
<link rel="stylesheet" href="~/dt-list-social.css" asp-append-version="true" />
<link rel="stylesheet" href="~/dt-rte.css" asp-append-version="true" />

<style>
    .footer {
        background: #2c3e50;
        color: #ecf0f1;
        margin-top: 60px;
        padding: 60px 0 30px;
    }
    .footer__blocks-wrapper {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 40px;
        margin-bottom: 40px;
    }
    .footer-block {
        flex: 1;
        min-width: 250px;
    }
    .footer-block__heading {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #fff;
    }
    .footer-block__details-content ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .footer-block__details-content ul li {
        margin-bottom: 10px;
    }
    .footer-block__details-content a {
        color: #bdc3c7;
        text-decoration: none;
        transition: color 0.3s;
    }
    .footer-block__details-content a:hover {
        color: #e74c3c;
    }
    .footer-social-icons {
        display: flex;
        gap: 15px;
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .footer-social-icons a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        color: #fff;
        transition: all 0.3s;
    }
    .footer-social-icons a:hover {
        background: #e74c3c;
        transform: translateY(-3px);
    }
    .footer__content-bottom {
        border-top: 1px solid rgba(255,255,255,0.1);
        padding-top: 30px;
        text-align: center;
        color: #95a5a6;
    }
    .newsletter-form {
        display: flex;
        gap: 10px;
    }
    .newsletter-form__field-wrapper {
        flex: 1;
    }
    .newsletter-form__field-wrapper input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid rgba(255,255,255,0.2);
        background: rgba(255,255,255,0.1);
        color: #fff;
        border-radius: 4px;
    }
    .newsletter-form__field-wrapper input::placeholder {
        color: rgba(255,255,255,0.6);
    }
    .newsletter-form__button {
        padding: 12px 25px;
        background: #e74c3c;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background 0.3s;
    }
    .newsletter-form__button:hover {
        background: #c0392b;
    }

    @@media (max-width: 768px) {
        .footer__blocks-wrapper {
            flex-direction: column;
        }
        .footer-block {
            width: 100%;
        }
    }
</style>

<footer class="footer">
    <div class="page-width">
        <div class="footer__blocks-wrapper">
            @* About Block *@
            <div class="footer-block footer-text">
                <h2 class="footer-block__heading">Về Billiard Shop</h2>
                <div class="footer-block__details-content">
                    <p>
                        Chúng tôi chuyên cung cấp các sản phẩm bida chất lượng cao,
                        từ cơ bida, bàn bida đến các phụ kiện chuyên nghiệp.
                    </p>
                    <ul class="footer-social-icons">
                        <li>
                            <a href="#" aria-label="Facebook">
                                <i class="fa fa-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" aria-label="Instagram">
                                <i class="fa fa-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" aria-label="Twitter">
                                <i class="fa fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" aria-label="YouTube">
                                <i class="fa fa-youtube"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            @* Quick Links *@
            <div class="footer-block footer-menu">
                <h2 class="footer-block__heading">Liên kết nhanh</h2>
                <div class="footer-block__details-content">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li><a href="@Url.Action("Index", "Product")">Sản phẩm</a></li>
                        <li><a href="#">Về chúng tôi</a></li>
                        <li><a href="#">Liên hệ</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                    </ul>
                </div>
            </div>

            @* Customer Service *@
            <div class="footer-block footer-menu">
                <h2 class="footer-block__heading">Hỗ trợ khách hàng</h2>
                <div class="footer-block__details-content">
                    <ul>
                        <li><a href="#">Hướng dẫn mua hàng</a></li>
                        <li><a href="#">Chính sách vận chuyển</a></li>
                        <li><a href="#">Phương thức thanh toán</a></li>
                        <li><a href="#">Chính sách bảo hành</a></li>
                        <li><a href="#">Câu hỏi thường gặp</a></li>
                    </ul>
                </div>
            </div>

            @* Newsletter *@
            <div class="footer-block footer-newsletter">
                <h2 class="footer-block__heading">Đăng ký nhận tin</h2>
                <div class="footer-block__details-content">
                    <p>Nhận thông tin về sản phẩm mới và ưu đãi đặc biệt</p>
                    <form method="post" action="#" class="newsletter-form">
                        <div class="newsletter-form__field-wrapper">
                            <input type="email" name="email" placeholder="Nhập email của bạn" required />
                        </div>
                        <button type="submit" class="newsletter-form__button" name="commit">
                            <span>Đăng ký</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        @* Footer Bottom *@
        <div class="footer__content-bottom">
            <div class="footer__content-bottom-wrapper">
                <p>&copy; @DateTime.Now.Year Billiard Shop. Cửa hàng Bida chuyên nghiệp. Tất cả quyền được bảo lưu.</p>
                <p style="margin-top: 10px;">
                    <a href="#" style="color: #95a5a6; margin: 0 10px;">Điều khoản sử dụng</a> |
                    <a href="#" style="color: #95a5a6; margin: 0 10px;">Chính sách bảo mật</a>
                </p>
            </div>
        </div>
    </div>
</footer>

@* Scroll to Top Button *@
<button id="scroll-to-top" style="
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    background: #e74c3c;
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: none;
    z-index: 999;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: all 0.3s;
">
    <i class="fa fa-arrow-up"></i>
</button>

<script>
    // Scroll to top functionality
    $(document).ready(function() {
        var scrollBtn = $('#scroll-to-top');

        $(window).scroll(function() {
            if ($(window).scrollTop() > 300) {
                scrollBtn.fadeIn();
            } else {
                scrollBtn.fadeOut();
            }
        });

        scrollBtn.click(function() {
            $('html, body').animate({scrollTop: 0}, 600);
            return false;
        });
    });
</script>
