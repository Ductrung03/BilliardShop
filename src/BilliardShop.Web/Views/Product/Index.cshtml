@model BilliardShop.Web.Models.ProductListViewModel
@{
    ViewData["Title"] = Model.CurrentCategory != null ? Model.CurrentCategory.TenDanhMuc : "Sản phẩm";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            @if (Model.CurrentCategory != null)
            {
                <li class="breadcrumb-item active" aria-current="page">@Model.CurrentCategory.TenDanhMuc</li>
            }
            else
            {
                <li class="breadcrumb-item active" aria-current="page">Sản phẩm</li>
            }
        </ol>
    </nav>

    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Danh mục</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var category in Model.AllCategories)
                    {
                        <a asp-controller="Product" asp-action="Index" asp-route-categorySlug="@category.DuongDanDanhMuc"
                           class="list-group-item list-group-item-action @(Model.CurrentCategory?.Id == category.Id ? "active" : "")">
                            @category.TenDanhMuc
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Product List -->
        <div class="col-md-9">
            @if (Model.CurrentCategory != null)
            {
                <div class="category-header mb-4">
                    <h1>@Model.CurrentCategory.TenDanhMuc</h1>
                    @if (!string.IsNullOrEmpty(Model.CurrentCategory.MoTa))
                    {
                        <p class="text-muted">@Model.CurrentCategory.MoTa</p>
                    }
                </div>
            }

            <!-- Search and Filter Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-controller="Product" asp-action="Search" method="get">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="searchTerm" class="form-label">Tìm kiếm</label>
                                <input type="text" class="form-control" id="searchTerm" name="q"
                                       value="@Model.SearchTerm" placeholder="Nhập tên sản phẩm...">
                            </div>
                            <div class="col-md-3">
                                <label for="minPrice" class="form-label">Giá từ</label>
                                <input type="number" class="form-control" id="minPrice" name="minPrice"
                                       placeholder="0" min="0" step="10000">
                            </div>
                            <div class="col-md-3">
                                <label for="maxPrice" class="form-label">Giá đến</label>
                                <input type="number" class="form-control" id="maxPrice" name="maxPrice"
                                       placeholder="10000000" min="0" step="10000">
                            </div>
                        </div>
                        <input type="hidden" name="categorySlug" value="@Model.CurrentCategory?.DuongDanDanhMuc" />
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Tìm kiếm
                            </button>
                            <a asp-controller="Product" asp-action="Index"
                               asp-route-categorySlug="@Model.CurrentCategory?.DuongDanDanhMuc"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Đặt lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <div class="alert alert-info mb-4">
                    Kết quả tìm kiếm cho: <strong>@Model.SearchTerm</strong>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="text-muted mb-0">Hiển thị @Model.Products.Count() trên @Model.TotalProducts sản phẩm</p>
            </div>

            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card product-card h-100">
                            <a asp-controller="Product" asp-action="Details" asp-route-slug="@product.DuongDanSanPham">
                                @if (product.HinhAnhs.Any())
                                {
                                    <img src="@product.HinhAnhs.First().DuongDanHinhAnh" class="card-img-top" alt="@product.TenSanPham" style="height: 250px; object-fit: cover;">
                                }
                                else
                                {
                                    <img src="/images/no-image.png" class="card-img-top" alt="No image" style="height: 250px; object-fit: cover;">
                                }
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a asp-controller="Product" asp-action="Details" asp-route-slug="@product.DuongDanSanPham" class="text-decoration-none text-dark">
                                        @product.TenSanPham
                                    </a>
                                </h5>
                                @if (!string.IsNullOrEmpty(product.MoTaNgan))
                                {
                                    <p class="card-text text-muted small">@product.MoTaNgan</p>
                                }
                                <div class="price-section mt-3">
                                    @if (product.GiaKhuyenMai.HasValue)
                                    {
                                        <span class="text-danger fw-bold">@product.GiaKhuyenMai.Value.ToString("N0") đ</span>
                                        <span class="text-muted text-decoration-line-through ms-2">@product.GiaGoc.ToString("N0") đ</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">@product.GiaGoc.ToString("N0") đ</span>
                                    }
                                </div>
                                @if (product.SoLuongTonKho <= 0)
                                {
                                    <span class="badge bg-secondary mt-2">Hết hàng</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Product pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Product" asp-action="Index"
                                   asp-route-categorySlug="@Model.CurrentCategory?.DuongDanDanhMuc"
                                   asp-route-page="@(Model.CurrentPage - 1)">Trước</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-controller="Product" asp-action="Index"
                                   asp-route-categorySlug="@Model.CurrentCategory?.DuongDanDanhMuc"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Product" asp-action="Index"
                                   asp-route-categorySlug="@Model.CurrentCategory?.DuongDanDanhMuc"
                                   asp-route-page="@(Model.CurrentPage + 1)">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
